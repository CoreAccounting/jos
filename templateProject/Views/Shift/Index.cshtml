@section scripts{
    <script>
         $('#datepicker').datetimepicker({
            format: 'MM/DD/YYYY',
         });

         $('#timepicker').datetimepicker({
            format: 'h:mm A',
        });

         $('#basic').select2({
            theme: "bootstrap"
         });
        $('#basic2').select2({
            theme: "bootstrap"
        });
        $('#basic3').select2({
