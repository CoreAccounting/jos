                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <form id="x" method="post">
                            <table id="Grid" class="table table-responsive table-striped table-head-bg-info" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Hatch No</th>
                                      
                                                                         
                                        <th>Loader unit Start</th>
                                        <th>Loader unit end</th>
                                        <th>Detail Activity</th>
                                        <th>Problem Identified</th>
                                        <th>Action</th>
                                        <th>Load Quantity Previous</th>
                                        <th>Load Quantity Today</th>
                                        <th>Load Quantity Cummulative</th>
                                        <th>Load Quantity Remaning</th>

                                    </tr>
                                </thead>
                            </table>
